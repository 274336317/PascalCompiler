package org.xtext.example.pascal.validation;

import java.util.Set;

public class Abstraction extends Element {

	private String name;
	private Set<Variable> parameters;
	
	public Abstraction(String name, Set<Variable> parameters, boolean inherited, ElementType type) {
		super(type, inherited);
		this.name = name;
		this.parameters = parameters;
	}
	
	public Abstraction(String name, Set<Variable> parameters, boolean inherited) {
		this(name, parameters, inherited, ElementType.PROCEDURE);
	}

	public Abstraction(String name) {
		this(name, null, false, ElementType.PROCEDURE);
	}
	
	public String getName() {
		return this.name;
	}
	
	public Set<Variable> getParameters() {
		return this.parameters;
	}
	
	@Override
	public boolean equals(Object obj) {
		if (obj == null || !(obj instanceof Abstraction)) {
			return false;
		}
		Abstraction other = (Abstraction) obj;
		return this.name.equals(other.name);
	}
	
}
