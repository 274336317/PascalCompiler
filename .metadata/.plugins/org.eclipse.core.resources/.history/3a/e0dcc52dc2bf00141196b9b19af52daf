package org.xtext.example.pascal.validation;


public class Variable extends Element {

	private String name;
	private String type;
	private VariableType varType;
	
	public Variable(String name, String type, boolean inherited, VariableType varType) {
		super(inherited);
		this.name = name;
		this.type = type;
		this.varType = varType;
	}
	
	public Variable(String name) {
		this(name, null, false, VariableType.VARIABLE);
	}
	
	public String getName() {
		return this.name;
	}
	
	public String getType() {
		return this.type;
	}
	
	public VariableType getVarType() {
		return this.varType;
	}
	
	@Override
	public boolean equals(Object obj) {
		if (obj == null || !(obj instanceof Variable))
			return false;
		Variable other = (Variable) obj;
		return other.name.toLowerCase().equals(this.name.toLowerCase());
	}
	
	@Override
	public String toString() {
		return "[" + this.name + ", " + this.inherited + (this.varType == null ? "" : ", " + this.varType) + "]";
	}
	 
}
