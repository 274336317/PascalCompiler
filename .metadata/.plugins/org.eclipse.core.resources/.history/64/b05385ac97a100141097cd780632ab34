grammar org.xtext.example.pascal.Pascal with org.eclipse.xtext.common.Terminals

generate pascal "http://www.xtext.org/example/pascal/Pascal"

pascal:
	program += program
; 

program:
	program_heading_block block "."
;

program_heading_block:
	"program" IDENTIFIER ( "(" identifier_list ")" ) ? ";"	
;
 
identifier_list:
	( IDENTIFIER ( "," IDENTIFIER ) * ) ?	
;

block:
	declaration_part statement_part
;

statement_part:
	"begin" statement_sequence "end"	
;

statement_sequence:
	statement ( ";" statement ) *
;

statement: //TODO
	( label ":" ) ? ( simple_statement )
;

label:
	INTEGER_NUMBER	
;

simple_statement: //TODO
	assignment_statement ?	
;

assignment_statement: //TODO
	variable ":=" expression	
;

variable: //TODO
	entire_variable
;

entire_variable: //TODO
	variable_identifier
;

variable_identifier:
	IDENTIFIER	
;

expression:
	simple_expression ( relation_operator simple_expression ) ?	
;

relation_operator:
	"=" | "<>" | "<" | "<=" | ">" | ">=" | "in"	
;

simple_expression:
	( SIGN ) ? term ( addition_operator term ) *	
;

addition_operator:
	"+" | "-" | "or"	
;

term:
	factor ( multiplication_operator factor ) *	
;

multiplication_operator:
	"*" | "/" | "div" | "mod" | "and"	
;

factor: //TODO
	variable | NUMBER //| STRING | set | "nil" | constant_identifier | bound_identifier | function_designator | "(" expression ")" | "not" factor	
;

declaration_part: //TODO
	( label_declaration_part ) ?
;

label_declaration_part:
	"label" label ( "," label ) * ";"
;

terminal IDENTIFIER:
	LETTER ( LETTER | DIGIT ) *	
;

terminal DIGIT:
	"0".."9"
;

terminal LETTER:
	"A".."Z" | "a".."z"
;
 
terminal UNSIGNED_DIGIT_SEQUENCE:
	DIGIT ( DIGIT ) *	
;

terminal SIGN:
	"+" | "-"	
;

terminal DIGIT_SEQUENCE:
	( SIGN ) ? UNSIGNED_DIGIT_SEQUENCE	
;

terminal SCALE_FACTOR:
	( "E" | "e" ) DIGIT_SEQUENCE	
;

terminal INTEGER_NUMBER: 
	DIGIT_SEQUENCE	
;

terminal REAL_NUMBER:
	DIGIT_SEQUENCE "." ( UNSIGNED_DIGIT_SEQUENCE ) ? ( SCALE_FACTOR ) ? | DIGIT_SEQUENCE SCALE_FACTOR	
;

terminal NUMBER:
	INTEGER_NUMBER | REAL_NUMBER	
;