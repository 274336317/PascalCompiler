package org.xtext.example.pascal.scoping

import org.eclipse.emf.ecore.EReference
import org.eclipse.xtext.scoping.IScope
import org.eclipse.xtext.scoping.Scopes
import org.eclipse.xtext.scoping.impl.AbstractDeclarativeScopeProvider
import org.xtext.example.pascal.pascal.variable

/**
 * This class contains custom scoping description.
 * 
 * see : http://www.eclipse.org/Xtext/documentation.html#scoping
 * on how and when to use it 
 *
 */
class PascalScopeProvider extends AbstractDeclarativeScopeProvider {
	
 def IScope scope_variable(variable v, EReference eReference) {
    Scopes::scopeFor((v.eContainer as Model).greetings.filter [ honest ])
  }
  
}
