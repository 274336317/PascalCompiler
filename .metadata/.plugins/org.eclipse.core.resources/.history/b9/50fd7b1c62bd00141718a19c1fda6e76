class PascalValidator extends AbstractPascalValidator {
	
	private Map<EObject, Map<String, type>> variables = new HashMap<EObject, Map<String, type>>();
	
	@Check
	def checkVariableDeclaration(variable_section section) {
		variables.put(section.eContainer.eContainer, new HashMap<String, type>()); 
	 	for (String name : section.identifiers.names) { 
	 		if (variables.get(section.eContainer.eContainer).containsKey(name)) {
	 			error("Variable was redeclared.", variable_section.identifiers);
	 		} else {
	 			variables.get(section.eContainer.eContainer).put(name, section.type);
	 		}
	 	}
	}
	
